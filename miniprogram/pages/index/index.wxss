/**index.wxss**/

.content {
  background-color: #f0f0f0;
  text-align: center;
  min-height: 1033rpx;
  padding: 10rpx 10rpx 80rpx 10rpx;
}
.menu-title {
  text-align: left;
  color: #25cffa;
} 
.menu {
  position: fixed;
  left: 5rpx;
  bottom: 0;
  width: 743rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  /* border-top: solid; */
  border-width: 1px;
  background-color: rgb(250, 250, 250);
}
.menu-item {
  width: 186rpx;
  color: #000000;
} 
.menu-item-text {
  font-size: 22px;
  line-height: 80rpx;
  height: 80rpx;
}
.top-search {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  background-color: #ffffff;
}
input {
  border: solid;
  border-width: 1px;
  border-radius: 15px;
  text-align: left;
  width: 75%;
  height: 60rpx;
  padding: 0 20rpx;
  /* background-color: #6bafeb; */
}
.button-list {
  margin-top: 10rpx;
  background-color: rgb(255, 255, 255);
  width: 100%;
}
.button-list-item {
  font-size: 22px;
  line-height: 80rpx;
  width: 100%;
  height: 80rpx;
}
.style-row {
  display: flex;
  flex-direction: row;
}
.style-column {
  display: flex;
  flex-direction: column;
}
.content-1 {
  font-size: 22px;
  margin-top: 10rpx;
  background-color: #ffffff;
  padding: 10rpx 0 0 0;
}
.ranking {
  width: 70%;
  text-align: left;
  padding: 4rpx 0 0 10rpx;
}
.navigator-hover {
  color:blue;
}
.other-navigator-hover {
  color:rgb(255, 0, 0);
}