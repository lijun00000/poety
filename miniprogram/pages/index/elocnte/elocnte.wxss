/**index.wxss**/
.content {
  text-align: center;
  min-height: 1033rpx;
  font-size: 18px;
  padding: 10rpx 10rpx 80rpx 10rpx;
}
.menu {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-width: 1px;
  background-color: #E5D6B6;
}
.menu-item {
  width: 25%;
} 
.icon-size {
  font-size: 74rpx;
  line-height: 72rpx;
}
.menu-item-text {
  font-size: 15px;
  line-height: 10rpx;
}
.search {
  position: absolute;
  top: 23rpx;
  left: 23rpx;
  font-size: 50rpx;
  color: #afa48f;
}
.search-input {
  border: solid 1px #afa48f;
  /* border-radius: 15px; */
  text-align: left;
  width: auto;
  height: 70rpx;
  padding-left: 76rpx;
  box-shadow: 1px 1px 1px #d4c9b5;
}
.style-row {
  display: flex;
  flex-direction: row;
}
.style-column {
  display: flex;
  flex-direction: column;
}
.hot-elocnte {
  text-align: left;
  padding: 10rpx 0 0 10rpx;
  font-size: 20px;
}
.elocnte-list {
  border: solid 1px #afa48f;
  height: 944rpx;
  text-align: left;
  font-size: 18px;
  margin-top: 10rpx;
}
.hot-elocnte-item {
  border-bottom: solid 1px #afa48f;
  height: 122rpx;
  padding-left: 10rpx;
  background-color: #ffffff;
  opacity: 0.6;
}
.hot-elocnte-item-text-title {
  line-height: 70rpx;
  font-size: 18px;
}
.hot-elocnte-item-text-content {
  color: #afa48f;
  line-height: 40rpx;
  width: 650rpx;
  font-size: 16px;
}
.detail-icon-size {
  color: #afa48f;
  font-size: 70rpx;
  line-height: 122rpx;
}

.navigator-hover {
  color:blue;
}
.other-navigator-hover {
  color:rgb(255, 0, 0);
}