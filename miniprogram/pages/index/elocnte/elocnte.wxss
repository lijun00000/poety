/**index.wxss**/
.content {
  background-color: #f0f0f0;
  text-align: center;
  min-height: 1033rpx;
  padding: 10rpx 10rpx 80rpx 10rpx;
}
.menu-title {
  text-align: left;
  color: #25cffa;
} 
.menu {
  position: fixed;
  left: 5rpx;
  bottom: 0;
  width: 743rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  /* border-top: solid; */
  border-width: 1px;
  background-color: rgb(250, 250, 250);
}
.menu-item {
  width: 186rpx;
  color: #000000;
} 
.menu-item-partner {
  width: 20%;
  color: #6bafeb;
}
.menu-item-text {
  font-size: 22px;
  line-height: 80rpx;
  height: 80rpx;
}
.top-search {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  background-color: #ffffff;
}
.search-input {
  border: solid;
  border-width: 1px;
  border-radius: 15px;
  text-align: left;
  width: 75%;
  height: 60rpx;
  padding: 0 20rpx;
  /* background-color: #6bafeb; */
}
.button-list {
  margin-top: 10rpx;
  background-color: rgb(242, 255, 244);
  width: 100%;
}
.button-list-item {
  font-size: 50rpx;
  line-height: 80rpx;
  width: 100%;
  height: 80rpx;
}
.style-row {
  display: flex;
  flex-direction: row;
}
.style-column {
  display: flex;
  flex-direction: column;
}
.content-1 {
  text-align: left;
  font-size: 24px;
  margin-top: 10rpx;
}
.hot-elocnte {
  /* border-bottom: solid;
  border-width: 1px; */
  padding-left: 10rpx;
  padding-bottom: 10rpx;
  background-color: #ffffff;
}
.hot-elocnte-item {
  margin: 10rpx 0;
  height: 30px;
  padding-left: 10rpx;
  background-color: #ffffff;
}
.hot-elocnte-item-text {
  font-size: 22px;
  line-height: 30px;
  width: 100%;
  /* border-bottom: solid;
  border-width: 1px; */
}
.hot-elocnte-item-icon {
  width: 23px;
  position: absolute;
  right: 10rpx;
  transform: rotate(-90deg);
}
.content-1-input {
  border-bottom: solid;
  border-width: 1px;
  text-align: left;
  width: 44%;
  margin-left: 29%;
  margin-top: 100rpx;
}

