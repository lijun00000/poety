/**index.wxss**/

.content {
  background-color: #f0f0f0;
  text-align: center;
  width: 730rpx;
  height: 1036rpx;
  padding: 10rpx 10rpx 80rpx 10rpx;
}
.menu {
  position: fixed;
  left: 5rpx;
  bottom: 0;
  width: 743rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  /* border-top: solid; */
  border-width: 1px;
  background-color: rgb(250, 250, 250);
}
.menu-item {
  width: 186rpx;
  color: #000000;
} 
.menu-item-text {
  font-size: 22px;
  line-height: 80rpx;
  height: 80rpx;
}
.top-search {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  background-color: #ffffff;
}
.title {
  background-color: #ffffff;
  margin-top: 10rpx;
}
.title-text {
  font-size: 24px;
  line-height: 74rpx;
  margin-right: 312rpx;
  padding-left: 10rpx;
}
.comment-count {
  margin-left: 74rpx;
}
.goToPlay {
  margin-left: 100rpx;
}
button[size=mini][type=default] {
  margin-top: 8rpx;
  margin-left: 8rpx;
}
input {
  border: solid;
  border-width: 1px;
  border-radius: 15px;
  text-align: left;
  width: 75%;
  height: 60rpx;
  padding: 0 20rpx;
  /* background-color: #6bafeb; */
}
.style-row {
  display: flex;
  flex-direction: row;
}
.style-column {
  display: flex;
  flex-direction: column;
}
.content-1 {
  font-size: 22px;
  margin-top: 10rpx;
  background-color: #ffffff;
  padding: 10rpx 0 0 0;
}
.list {
  height: 1032rpx;
}
.navigator-hover {
  color:blue;
}
.other-navigator-hover {
  color:rgb(255, 0, 0);
}