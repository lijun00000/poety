/**index.wxss**/

.content {
  text-align: center;
  width: 730rpx;
  height: 1036rpx;
  padding: 10rpx 10rpx 80rpx 10rpx;
}
.menu {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-width: 1px;
  background-color: #E5D6B6;
}
.menu-item {
  width: 25%;
} 
.icon-size {
  font-size: 74rpx;
  line-height: 72rpx;
}
.menu-item-text {
  font-size: 15px;
  line-height: 10rpx;
}
.search {
  position: absolute;
  top: 23rpx;
  left: 23rpx;
  font-size: 50rpx;
  color: #afa48f;
}
.search-input {
  border: solid 1px #afa48f;
  /* border-radius: 15px; */
  text-align: left;
  width: auto;
  height: 70rpx;
  padding-left: 76rpx;
  box-shadow: 1px 1px 1px #d4c9b5;
}
.title {
  margin-top: 10rpx;
}
.title-text {
  font-size: 24px;
  line-height: 74rpx;
  margin-right: 312rpx;
  padding-left: 10rpx;
}
.comment-count {
  margin-left: 74rpx;
}
.goToPlay {
  margin-left: 100rpx;
}
button[size=mini][type=default] {
  margin-top: 8rpx;
  margin-left: 8rpx;
}
.style-row {
  display: flex;
  flex-direction: row;
}
.style-column {
  display: flex;
  flex-direction: column;
}
.content-1 {
  font-size: 22px;
  margin-top: 10rpx;
  padding: 10rpx 0 0 0;
}
.list {
  height: 1032rpx;
}
.navigator-hover {
  color:blue;
}
.other-navigator-hover {
  color:rgb(255, 0, 0);
}