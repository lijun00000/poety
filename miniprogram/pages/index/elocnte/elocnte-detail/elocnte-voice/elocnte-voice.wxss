/**index.wxss**/

.content {
  background-color: #f0f0f0;
  text-align: center;
  width: 730rpx;
  height: 1036rpx;
  padding: 10rpx 10rpx 80rpx 10rpx;
}
.menu {
  position: fixed;
  left: 5rpx;
  bottom: 0;
  width: 743rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  /* border-top: solid; */
  border-width: 1px;
  background-color: rgb(250, 250, 250);
}
.menu-item {
  width: 186rpx;
  color: #000000;
} 
.menu-item-text {
  font-size: 22px;
  line-height: 80rpx;
  height: 80rpx;
}
.top-search {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  background-color: #ffffff;
}
.title {
  background-color: #ffffff;
  margin-top: 10rpx;
  font-size: 24px;
  line-height: 74rpx;
  text-align: center;
}
button[size=mini][type=default] {
  margin-top: 8rpx;
}
.author {
  text-align: center;
  font-size: 16px;
}
.author-text {
  margin-right: 5rpx;
  margin-left: 5rpx;
}
.content-1 {
  font-size: 22px;
  margin-top: 10rpx;
  background-color: #ffffff;
  height: 944rpx;
}
.content-2 {
  font-size: 18px;
  text-align: center;
  padding: 0 10rpx 50rpx 10rpx;
  width: auto;
}
.content-3-title {
  color: rgb(122, 165, 243);
  border-bottom: solid rgb(122, 165, 243) 1px;
}
.content-3 {
  font-size: 16px;
  text-align: left;
  padding: 0 10rpx 50rpx 10rpx;
  width: auto;
}
.key {
  color: #f76e6e;
}
.comment {
  position: fixed;
  bottom: 90rpx;
  right: 10rpx;
  width: 710rpx;
  height: 49rpx;
  padding: 10rpx;
  background-color: #ffffff;
}
.comment-content {
  /* background-color: aquamarine; */
  height: 49rpx;
  line-height: 49rpx;
  width: 50%;
  padding-left: 70rpx;
}
input {
  border: solid;
  border-width: 1px;
  border-radius: 15px;
  text-align: left;
  width: 75%;
  height: 60rpx;
  padding: 0 20rpx;
  /* background-color: #6bafeb; */
}
.music-controller {
  position: absolute;
  bottom: 14%;
  left: 50%;
  transform: translate(-50%);
  display: flex;
  align-items: center;
}
.music-controller .iconfont{
  color: #9c9c9c;
  opacity: 0.5;
}
.icon-shangyishoushangyige, .icon-xiayigexiayishou {
  font-size: 90rpx;
}
.icon-jf-play, .icon-zanting {
  font-size: 120rpx;
  margin: 0 60rpx;
}
.style-row {
  display: flex;
  flex-direction: row;
}
.style-column {
  display: flex;
  flex-direction: column;
}
.navigator-hover {
  color:blue;
}
.other-navigator-hover {
  color:rgb(255, 0, 0);
}