/**index.wxss**/

.content {
  text-align: center;
  /* width: 730rpx; */
  height: 1036rpx;
  font-size: 18px;
  padding: 10rpx 10rpx 80rpx 10rpx;
}
.menu {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-width: 1px;
  background-color: #E5D6B6;
}
.menu-item {
  width: 25%;
} 
.icon-size {
  font-size: 74rpx;
  line-height: 72rpx;
}
.menu-item-text {
  font-size: 15px;
  line-height: 10rpx;
}
.poetry-title {
  font-size: 24px;
  line-height: 74rpx;
  text-align: center;
}
.poetry-author {
  text-align: center;
  font-size: 16px;
}
.author-text {
  margin-right: 5rpx;
  margin-left: 5rpx;
}
.poetry {
  /* border: solid 1px #afa48f; */
  font-size: 22px;
  margin-top: 10rpx;
  /* background-color: #ffffff; */
  height: 1020rpx;
  /* opacity: 0.6; */
}
.poetry-content {
  font-size: 18px;
  text-align: center;
  padding: 0 10rpx 50rpx 10rpx;
  width: auto;
}
.poetry-remark-title {
  color: rgb(122, 165, 243);
  border-bottom: solid rgb(122, 165, 243) 1px;
}
.poetry-remark {
  font-size: 16px;
  text-align: left;
  padding: 0 10rpx 50rpx 10rpx;
  width: auto;
}
.key {
  color: #f76e6e;
}
.comment {
  position: fixed;
  bottom: 112rpx;
  right: 10rpx;
  width: 730rpx;
  height: 55rpx;
  /* padding: 10rpx; */
  background-color: #ffffff;
  opacity: 0.6;
}
.comment-content {
  height: 55rpx;
  line-height: 55rpx;
}
.comment-content-left {
  width: 40%;
  height: 55rpx;
  line-height: 58rpx;
}
.comment-content-right {
  width: 40%;
  height: 55rpx;
  line-height: 58rpx;
}
.music-controller {
  position: absolute;
  bottom: 14%;
  left: 50%;
  transform: translate(-50%);
  display: flex;
  align-items: center;
}
.music-controller .iconfont{
  color: #9c9c9c;
  opacity: 0.5;
}
.icon-shangyishoushangyige, .icon-xiayigexiayishou {
  font-size: 90rpx;
}
.icon-jf-play, .icon-zanting {
  font-size: 60rpx;
  margin: 0 60rpx;
  line-height: 56rpx;
}
.style-row {
  display: flex;
  flex-direction: row;
}
.style-column {
  display: flex;
  flex-direction: column;
}
.navigator-hover {
  color:blue;
}
.other-navigator-hover {
  color:rgb(255, 0, 0);
}